			{{> systems/aegean/templates/partials/select-input.hbs
				label="aegean.equipment.Availability"
				value=system.equipment.Availability.value
				name="system.equipment.Availability.value"
				options=config.availability
			}}

			<p class="note">{{ localize "aegean.equipment.AvailabilityNote" }}</p>

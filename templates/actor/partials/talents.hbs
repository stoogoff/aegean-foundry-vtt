<div class="talents">
	{{#if talents}}
		{{#each talents as |talent key|}}
			<div class="accordion">
				<div class="accordion-bar">
					<span class="accordion-activator">{{ talent.name }}</span>
					<div class="action-bar">
						{{> systems/aegean/templates/partials/action.hbs action="delete-talent" id=talent.id icon="fa-trash"}}
					</div>
				</div>
				<div class="accordion-content">
					{{{ talent.system.Description.value }}}
				</div>
			</div>
		{{/each}}
	{{else}}
		<p class="note">{{ localize "aegean.system.TalentsNone" }}</p>
	{{/if}}
</div>

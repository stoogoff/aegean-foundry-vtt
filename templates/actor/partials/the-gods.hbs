<div class="the-gods">
	{{#each gods as |deity key|}}
		<div class="accordion">
			<div class="accordion-bar">
				<span class="accordion-activator">{{ deity.name }}</span>
				<div class="action-bar">
					{{#each deity.system.stats.Skills.value}}
						<span class="chip">{{ . }}</span>
					{{/each}}
					{{> systems/aegean/templates/partials/action.hbs action="delete-action" id=deity.id icon="fa-trash"}}
					<select name="system.stats.Relationship.value" class="float-right set-favour" data-id="{{ deity.id }}">
						{{#select deity.system.stats.Relationship.value}}
							<option value="Favour">{{ localize "aegean.system.Favour" }}</option>
							<option value="Disfavour">{{ localize "aegean.system.Disfavour" }}</option>
						{{/select}}
					</select>
				</div>
			</div>
			<div class="accordion-content">
				{{{ deity.system.Description.value }}}

				<div class="symbols">
					<strong class="uppercase">Symbols:</strong>
					{{#each deity.system.stats.Symbols.value}}
						<span class="chip">{{ . }}</span>
					{{/each}}
				</div>
			</div>
		</div>
	{{/each}}
</div>

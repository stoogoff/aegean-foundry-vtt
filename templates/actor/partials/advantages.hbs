<div class="advantages">
	{{#each advantages as |adv key|}}
		<div class="accordion">
			<div class="accordion-bar">
				<span class="accordion-activator">{{ adv.name }} <span class="chip">{{ adv.system.stats.Cost.value }}CP</span></span>
				<div class="action-bar">
					{{> systems/aegean/templates/partials/action.hbs action="delete-adv" id=adv.id icon="fa-trash"}}
				</div>
			</div>
			<div class="accordion-content">
				{{{ adv.system.Description.value }}}
			</div>
		</div>
	{{/each}}
</div>
